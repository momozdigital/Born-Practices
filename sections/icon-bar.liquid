{% if section.blocks.size > 0 %}
<div class="iconbar iconbar-{{ section.id }}">
  <div class="clear">
    <ul>

      {% for block in section.blocks %}
          <li class="item one-third small--one-whole">
            <a href="{{ block.settings.link }}">
              {{ block.settings.image | img_url: 'master' | img_tag: block.settings.image.alt }}
              <h3>{{ block.settings.title }}</h3>
              <div class="bajada">
                {{ block.settings.bajada }}
              </div>
            </a>
          </li>
      {% endfor %}

    </ul>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Icon Bar",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title Block"
        },
        {
          "type": "richtext",
          "id": "bajada",
          "label": "Text",
		  "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Bar",
      "category": "Text"
    }
  ]
}
{% endschema %}