{% if section.blocks.size > 0 %}
<div class="slideshow slideshow-{{ section.id }}">
  <ul>
    
    {% for block in section.blocks %}
    	<li>
          <a href="{{ block.settings.link }}">
            {{ block.settings.image | img_url: 'master' | img_tag: block.settings.image.alt }}
          </a>
	    </li>
    {% endfor %}
    
  </ul>
</div>
{% endif %}


<script type="text/javascript">
	$(document).ready(function() {
		$('.slideshow-{{ section.id }} ul').slick({
	    	dots: false,
	    	arrows: true,
	    	responsive: [
		    	{
			    	breakpoint: 830,
			        settings: {
						dots: true,
						arrows: false
			        }
		        }
	    	]
		});
	});
</script>

{% schema %}
{
  "name": "Slideshow",
  "class": "index-section",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "category": "Image",

      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}