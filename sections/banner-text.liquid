{% schema %}
{
  "name": "Banner Text",
  "settings": [
    {
  	  "type": "url",
  	  "id": "link",
  	  "label": "Link URL"
    },
    {
  	  "type": "text",
  	  "id": "title",
  	  "label": "Title"
    },
    {
  	  "type": "textarea",
  	  "id": "bajada",
