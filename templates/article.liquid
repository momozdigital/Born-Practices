<article>
  
  <div class="header grid">
    <div class="item">
      <h6>{{ blog.title }} — <time pubdate datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%b %d, %Y' }}</time></h6>
      <h1 class="h2">{{ article.title }}</h1>
      <div class="bajada">
        {{ article.excerpt }}
      </div>
    </div>
    <div class="item">
      <img src="{{ article.image.src | img_url: "master" }}" />
    </div>
  </div>

  <div class="content grid">
    <div class="item"></div>
    <div class="item">
  		{{ article.content }}  
    </div>    
  </div>

  <a href="https://borncl.myshopify.com/collections/blog" class="boton" style="margin-bottom: 0;">Ver más del blog</a>
  
  <!-- div class="navposts grid">
  {% if blog.next_article or blog.previous_article %}   
    {% if blog.previous_article %}
      {{ 'Ver post anterior' | link_to: blog.previous_article | replace: '<a', '<a class="boton2"' }}
    {% endif %}
    {% if blog.next_article %}
      {{ 'Ver post siguiente' | link_to: blog.next_article | replace: '<a', '<a class="boton2"' }}
    {% endif %} 
  {% endif %}
  </div -->
  
  <div class="others grid">
    {% assign blogCurrent = blog.title | handleize %}
    {% for article in blogs[blogCurrent].articles limit: 3 %}
    <div class="item">
      <a href="{{ article.url }}"><img src="{{ article.image.src | img_url: "300x200", scale: 2, crop: 'center' }}" /></a>
        <h5>{{ article.title | link_to: article.url }}</h5>
    </div>
    {% endfor %}
  </div>
  
</article>